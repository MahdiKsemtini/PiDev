{% extends 'base.html.twig' %}

{% block title %}RightJob{% endblock %}

{% block css %}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, shrink-to-fit=9">
    <meta name="description" content="Gambolthemes">
    <meta name="author" content="Gambolthemes">
    <title>Cursus - My Courses</title>

    <!-- Favicon Icon -->
    <link rel="icon" type="image/png" href="images/fav.png">

    <!-- Stylesheets -->
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,500' rel='stylesheet'>
    <link href='vendor/unicons-2.0.1/css/unicons.css' rel='stylesheet'>
    <link href="css/vertical-responsive-menu1.min.css" rel="stylesheet">
    <link href="css/instructor-dashboard.css" rel="stylesheet">
    <link href="css/instructor-responsive.css" rel="stylesheet">
    <link href="css/night-mode.css" rel="stylesheet">
    <link href="css/datepicker.min.css" rel="stylesheet">

    <!-- Vendor Stylesheets -->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="vendor/OwlCarousel/assets/owl.carousel.css" rel="stylesheet">
    <link href="vendor/OwlCarousel/assets/owl.theme.default.min.css" rel="stylesheet">
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="vendor/semantic/semantic.min.css">


{% endblock %}

{% block body %}


    <div class="wrapper">
        <div class="sa4d25">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h2 class="st_title"><i class="uil uil-book-alt"></i>Gestion des publications</h2>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="cater_ttle" >
                            <div align="center" >
                                <a href={{ path('backCommentaires') }} class="upload_btn">Gestion des commentaires</a>
                                <a href={{ path('statistiques') }} class="upload_btn">Statistiques</a>
                            </div>
                        </div>



                            <div class="tab-content" id="pills-tabContent">
                                <div class="tab-pane fade show active" id="pills-my-courses" role="tabpanel">
                                    <div class="review_right" style="margin-top: 20px" >
                                        <div class="review_right_heading">
                                            <h3>Les Publications :</h3>
                                            <div class="review_search">
                                                <form method="POST">
                                                    <button type="submit" class="upload_btn" ><i class="uil-arrows-v-alt">DATE</i></button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="table-responsive mt-30">
                                        <table class="table ucp-table">
                                            <thead class="thead-s">

                                            <tr>
                                                <th class="text-center" scope="col">id publication</th>
                                                <th class="text-center" scope="col">id utilisateur</th>
                                                <th class="text-center" scope="col">Description</th>
                                                <th class="text-center" scope="col">image</th>
                                                <th class="text-center" scope="col"><i type="submit" class="uil uil-search"></i>date publication</th>
                                                <th class="text-center" scope="col">Action</th>
                                            </tr>

                                            </thead>
                                            <tbody>
                                            {% for i in publications %}
                                                <tr>
                                                    <td class="text-center">{{ i.id }}</td>
                                                    <td class="text-center">{{ i.idUtilisateur }}</td>
                                                    <td class="text-center">{{ i.description }}</td>
                                                    <td class="text-center">{{ i.image }}</td>
                                                    <td class="text-center">{{ i.datePublication | date }}</td>
                                                    <td class="text-center">
                                                        <a href={{ path('deletePublication',{'id': i.id }) }} title="Delete" class="gray-s"><i class="uil uil-trash-alt"></i></a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>

                                        </table>
                                    </div>
                                </div>

                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block js %}
    <script src="js/vertical-responsive-menu.min.js"></script>
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="vendor/OwlCarousel/owl.carousel.js"></script>
    <script src="vendor/semantic/semantic.min.js"></script>
    <script src="js/custom.js"></script>
    <script src="js/night-mode.js"></script>
{% endblock %}