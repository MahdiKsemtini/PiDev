{% extends 'base_back.html.twig' %}

 {% block title %}RightJob{% endblock %}

{% block body %}

    <!-- Body Start -->
    <div class="wrapper">
        <div class="sa4d25">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-12 col-lg-8">
                        <div class="section3125">
                            <div class="explore_search">
                                <div class="ui search focus">
                                    <div class="ui left icon input swdh11" >
                                        <input id="search" class="prompt srch_explore" type="text" placeholder="Chercher un admin..."><br>
                                        <i class="uil uil-search-alt icon icon2"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>





                    <div class="col-md-12">


                        <div class="_14d25">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="my_courses_tabs" id="t">

                                        <ul class="nav nav-pills my_crse_nav"  id="pills-tab" role="tablist">
                                            <li class="nav-item" style="width: 50%">
                                                <a class="nav-link active" id="pills-my-courses-tab" data-toggle="pill" href="#Event-Loisir" role="tab" aria-controls="Event-Loisir" aria-selected="true"><i class="uil uil-book-alt"></i>Les Evenements de Loisirs </a>
                                            </li>
                                            <li class="nav-item" style="width: 50%">
                                                <a class="nav-link" id="pills-my-purchases-tab" data-toggle="pill" href="#Formation" role="tab" aria-controls="Formation" aria-selected="false"><i class="uil uil-book-alt"></i>Les Formations</a>
                                            </li>
                                        </ul>
                                        <div class="tab-content" id="pills-tabContent">
                                            <div class="tab-pane fade show active" id="Event-Loisir" role="tabpanel">
                                                <div class="col-lg-12 col-md-12">


                                                    {% if ListeEventLoisir.items == null %}
                                                        <div class="title129 mt-35 mb-35">
                                                            <h2>Aucune Evenement de Loisir non approuvé</h2>
                                                        </div>
                                                    {% else %}

                                                        <div class="table-responsive mt-50 mb-0">
                                                            <table class="table ucp-table">
                                                                <thead class="thead-s">
                                                                <tr>
                                                                    <th class="text-center" scope="col">Titre de l'Evenement</th>
                                                                    <th class="text-center" scope="col">Créé par</th>
                                                                    <th class="text-center" scope="col">Description</th>
                                                                    <th class="text-center" scope="col">Domaine</th>
                                                                    <th class="text-center" scope="col">Date début</th>
                                                                    <th class="text-center" scope="col">Date fin</th>
                                                                    <th class="text-center" scope="col">Nombre de participant</th>
                                                                    <th class="text-center" scope="col">Lieu</th>
                                                                    <th class="text-center" scope="col">Controls</th>
                                                                </tr>
                                                                </thead>
                                                                <tbody>

                                                                {% for i in ListeEventLoisir %}
                                                                    {% if i.Etat == 0 %}
                                                                        <tr>

                                                                            <td class="text-center">{{ i.Labelle }}</td>
                                                                            {% if i.idFr == null %}
                                                                                <td class="cell-center">{{ i.idSo.nom }}</td>
                                                                            {% else %}
                                                                                <td class="cell-center">{{ i.idFr.nom }} {{ i.idFr.prenom }}</td>
                                                                            {% endif %}

                                                                            <td class="text-center">{{ i.Description }}</td>
                                                                            <td class="text-center">{{ i.Domaine }}</td>
                                                                            <td class="text-center">{{i.DateDebut ? i.DateDebut|date('Y-m-d')}}</td>
                                                                            <td class="text-center">{{i.DateFin ? i.DateFin|date('Y-m-d')}}</td>
                                                                            <td class="text-center">{{ i.NbParticipant }}</td>
                                                                            <td class="text-center">{{ i.Lieu }}</td>

                                                                            <td class="text-center">
                                                                                <a href="{{ path('activateEvenement', {'id': i.id}) }}" title="Approuver" class="gray-s"><i class="uil uil-check"></i></a>
                                                                                <a href="{{ path('deactivateEvenement', {'id': i.id}) }}" title="Effacer" class="gray-s"><i class="uil uil-trash-alt"></i></a>
                                                                            </td>

                                                                        </tr>
                                                                    {% endif %}
                                                                {% endfor %}

                                                                </tbody>
                                                            </table>
                                                            <div class="main-p-pagination">
                                                                <nav aria-label="Page navigation example">
                                                                    <ul class="pagination">
                                                                        <li class="page-item">
                                                                            {{ knp_pagination_render(ListeEventLoisir) }}
                                                                        </li>

                                                                    </ul>
                                                                </nav>
                                                            </div>

                                                        </div>
                                                    {% endif %}
                                                </div>


                                            </div>
                                            <div class="tab-pane fade" id="Formation" role="tabpanel">
                                                <div class="col-lg-12 col-md-12">


                                                    {% if ListeFormation.items == null %}
                                                        <div class="title129 mt-35 mb-35">
                                                            <h2>Aucune Formation non approuvé</h2>
                                                        </div>
                                                    {% else %}

                                                        <div class="table-responsive mt-50 mb-0">
                                                            <table class="table ucp-table">
                                                                <thead class="thead-s">
                                                                <tr>
                                                                    <th class="text-center" scope="col">Titre de l'Evenement</th>
                                                                    <th class="text-center" scope="col">Créé par</th>
                                                                    <th class="text-center" scope="col">Description</th>
                                                                    <th class="text-center" scope="col">Domaine</th>
                                                                    <th class="text-center" scope="col">Date début</th>
                                                                    <th class="text-center" scope="col">Date fin</th>
                                                                    <th class="text-center" scope="col">Montant</th>
                                                                    <th class="text-center" scope="col">Lieu</th>
                                                                    <th class="text-center" scope="col">Controls</th>
                                                                </tr>
                                                                </thead>
                                                                <tbody>

                                                                {% for i in ListeFormation %}
                                                                    {% if i.Etat == 0 %}
                                                                        <tr>

                                                                            <td class="text-center">{{ i.Labelle }}</td>
                                                                            {% if i.idFr == null %}
                                                                                <td class="cell-center">{{ i.idSo.nom }}</td>
                                                                            {% else %}
                                                                                <td class="cell-center">{{ i.idFr.nom }} {{ i.idFr.prenom }}</td>
                                                                            {% endif %}

                                                                            <td class="text-center">{{ i.Description }}</td>
                                                                            <td class="text-center">{{ i.Domaine }}</td>
                                                                            <td class="text-center">{{i.DateDebut ? i.DateDebut|date('Y-m-d')}}</td>
                                                                            <td class="text-center">{{i.DateFin ? i.DateFin|date('Y-m-d')}}</td>
                                                                            <td class="text-center">{{ i.Montant }}</td>
                                                                            <td class="text-center">{{ i.Lieu }}</td>

                                                                            <td class="text-center">
                                                                                <a href="{{ path('activateFormation', {'id': i.id}) }}" title="Approuver" class="gray-s"><i class="uil uil-check"></i></a>
                                                                                <a href="{{ path('deactivateFormation', {'id': i.id}) }}" title="Effacer" class="gray-s"><i class="uil uil-trash-alt"></i></a>
                                                                            </td>

                                                                        </tr>
                                                                    {% endif %}
                                                                {% endfor %}

                                                                </tbody>
                                                            </table>
                                                            <div class="main-p-pagination">
                                                                <nav aria-label="Page navigation example">
                                                                    <ul class="pagination">
                                                                        <li class="page-item">
                                                                            {{ knp_pagination_render(ListeFormation) }}
                                                                        </li>

                                                                    </ul>
                                                                </nav>
                                                            </div>

                                                        </div>
                                                    {% endif %}
                                                </div>


                                            </div>

                                        </div>

                                    </div>
                                </div>

                            </div>

                        </div>


                    </div>


            </div>
        </div>
    </div>





    <!-- Body End -->




{% endblock %}

