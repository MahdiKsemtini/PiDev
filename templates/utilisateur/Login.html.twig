        <div class="container">
            <div class="row justify-content-lg-center justify-content-md-center">
                <div class="col-lg-12">
                    <div class="main_logo25" id="logo">
                        <a href="{{ path('index') }}"><img src="{{ asset('images/Logo_complet.png') }}" alt="" width="160" height="70"></a>
                        <a href="{{ path('index') }}"><img class="logo-inverse" src="{{ asset('images/Logo_complet.png') }}" alt="" width="140" height="70"></a>
                    </div>
                </div>

                <div class="col-lg-6 col-md-8">
                    <div class="sign_form">
                        <h2>Content de te revoir</h2>
                        <p>Connectez-vous à votre compte!</p>
{#                        <button class="social_lnk_btn color_btn_fb" ><i class="uil uil-facebook-f"></i><a href="{{ path('connect_facebook_start') }}">Continue with Facebook</a></button>#}
