{#                        <button class="social_lnk_btn mt-15 color_btn_go"><i class="uil uil-google"></i>Continue with Google</button>#}
                        <form {{ form_start(form,{'attr':{novalidate:'novalidate'}}) }}
                            <div class="ui search focus mt-15">
                                <div class="ui left icon input swdh95">
                                    {{ form_widget(form.email) }}
                                    <i class="uil uil-envelope icon icon2"></i>
                                </div>
                            </div>
                            <div class="ui search focus mt-15">
                                <div class="ui left icon input swdh95">
                                    {{ form_errors(form.email) }}

                                </div>
                            </div>
                            <div class="ui search focus mt-15">
                                <div class="ui left icon input swdh95">
                                    {{ form_widget(form.mot_de_passe) }}
                                    <i class="uil uil-key-skeleton-alt icon icon2"></i>
                                </div>
                            </div>
                            <div class="ui search focus mt-15">
                                <div class="ui left icon input swdh95">
                                    {{ form_errors(form.mot_de_passe) }}

                                </div>
                            </div>

                            <div class="ui search focus mt-15">
                                <div class="ui left icon input swdh95">
                                    {{ form_widget(form.captchaCode) }}
                                </div>
                            </div>
                        <br>
                        <br>
                            <div class="ui search focus mt-15">
                                <div class="ui left icon input swdh95">
                                    {{ form_errors(form.captchaCode) }}
                                </div>
                            </div>

                            {{ form_widget(form.SignIn) }}
                        </form>
                        <p class="sgntrm145">Ou <a href="{{ path('ForgetPassword') }}">mot de passe oublié</a>?</p>
                        <p class="mb-0 mt-30 hvsng145">vous n'avez pas de compte Freelancer? <a href="{{ path('SignUp',{'type':'Freelancer'}) }}">Sign Up</a></p>
                        <p class="mb-0 mt-30 hvsng145">vous n'avez pas de compte de Societe? <a href="{{ path('SignUp',{'type':'Societe'}) }}">Sign Up</a></p>
                    </div>
                    <div class="sign_footer"><img src="{{ asset('images/sign_logo.png') }}" alt="">© 2021 <strong>PowerDev</strong>. All Rights Reserved.</div>
                </div>
            </div>
        </div>
    </div>
    <!-- Signin End -->
{% endblock %}

