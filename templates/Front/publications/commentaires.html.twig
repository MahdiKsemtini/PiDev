{% extends 'base.html.twig' %}

{% block title %}RightJob{% endblock %}

{% block body %}

    <div class="wrapper">
        <div class="sa4d25">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-8 col-lg-8">

    <div class="fcrse_3">
        <div class="cater_ttle">
            <h4>Commentaires</h4>
        </div>
        <div class="live_chat">
            {% for i in commentaires %}
                {% if i.id_util!=null %}
                    <div class="chat1">
                        <div class="fcrse_1 mt-30">

                                            <div class="tutor_content_dt">
                                                <div class="tutor_img">
                                                    {% if i.id_util.id!= app.session.get('id') %}
                                                        <a href="{{ path('ViewFreelancerProfileF', {'id': i.id_util.id}) }}"><img src="{{ asset('picture/' ~ i.id_util.PhotoDeProfile) }}" alt=""></a>
                                                    {% elseif i.id_util.id== app.session.get('id') and  app.session.get('compte_facebook')==null %}
                                                        <a href="{{ path('ViewFreelancerProfileF', {'id': i.id_util.id}) }}"><img src="{{ asset('picture/' ~ i.id_util.PhotoDeProfile) }}" alt=""></a>

                                                    {% else %}
                                                        <a href="#"><img src="{{ asset('picture/' ~ i.id_util.PhotoDeProfile) }}" alt=""></a>
                                                    {% endif %}
                                                    </div>
                                                <div class="tut1250">
                                                    {% if i.id_util.id!= app.session.get('id') %}
                                                        <a href="{{ path('ViewFreelancerProfileF', {'id': i.id_util.id}) }}" class="tutor_name">{{ i.id_util.nom }}</a>
                                                    {% else %}
                                                        <a href="#" class="tutor_name">{{ i.id_util.nom }}</a>
                                                    {% endif %}
                                                </div>
                                                <div class="tut1250">
                                                    <h5>{{ i.description }}</h5>
                                            </div>
                                        </div>


                        </div>

                    </div>
                {% else %}
                    <div class="chat1">
                        <div class="fcrse_1 mt-30">

                                            <div class="tutor_content_dt">
                                                <div class="tutor_img">
                                                    {% if i.societe.id!= app.session.get('id') %}
                                                        <a href="{{ path('ViewSocieteProfileF', {'id': i.societe.id}) }}"><img src="{{ asset('picture/' ~ i.societe.PhotoDeProfile) }}" alt=""></a>
                                                    {% elseif i.societe.id== app.session.get('id') and  app.session.get('compte_facebook')!=null %}
                                                        <a href="{{ path('ViewSocieteProfileF', {'id': i.societe.id}) }}"><img src="{{ asset('picture/' ~ i.societe.PhotoDeProfile) }}" alt=""></a>

                                                    {% else %}
                                                        <a href="#"><img src="{{ asset('picture/' ~ i.societe.PhotoDeProfile) }}" alt=""></a>
                                                    {% endif %}
                                                    </div>
                                                <div class="tut1250">
                                                    {% if i.societe.id!= app.session.get('id') %}
                                                        <a href="{{ path('ViewSocieteProfileF', {'id': i.societe.id}) }}" class="tutor_name">{{ i.societe.nom }}</a>
                                                    {% else %}
                                                        <a href="#" class="tutor_name">{{ i.societe.nom }}</a>
                                                    {% endif %}
                                                </div>

                                                <div class="tut1250">
                                                    <h5>{{ i.description }}</h5>
                                            </div>
                                        </div>


                    </div>

                    </div>
                {% endif %}
            {% endfor %}
        </div>
        <div class="live_comment">
            <div class="col-lg-12 col-md-12">

                    <div class="cater_ttle">
                        <h4>Ajouter un commentaire</h4>
                    </div>
                    {{ form_start(form) }}

                    <div class="form-group">
                        <label for="exampleInputName1">{{ form_label(form.description) }}</label>
                        {{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}
                    </div>


                <div style="margin-top: 10px; float:right">

                    <a class="btn btn-light"  onclick="document.location='forum'" >Cancel</a>
                    {{ form_widget(form.Publier, {'attr':{'class':'Get_btn'}} ) }}

                </div>
                {{ form_end(form) }}


            </div>
        </div>
        </div>
        </div>
            </div>
        </div>


    </div>


{% endblock %}

{% block js %}
    <script src="{{ asset('js/vertical-responsive-menu.min.js') }}"></script>
    <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('vendor/OwlCarousel/owl.carousel.js') }}"></script>
    <script src="{{ asset('vendor/semantic/semantic.min.js') }}"></script>
    <script src="{{ asset('js/custom.js') }}"></script>
    <script src="{{ asset('js/night-mode.js') }}"></script>
{% endblock %}