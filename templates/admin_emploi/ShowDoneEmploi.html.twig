                                                            <td class="text-center">{{ i.nomProjet }}</td>
                                                            <td class="cell-ta">{{ i.competences }}</td>
                                                            <td class="text-center">{{ i.description }}</td>
                                                            <td class="text-center">{{ i.domaine }}</td>
